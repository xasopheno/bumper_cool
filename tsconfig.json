{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "rootDir": "./actions",
    "outDir": "dist",
    "lib": ["es2015", "es2017", "es2020.string"],
    "types": ["node"]
  },
  "include": ["actions/**/*.ts"],
  "exclude": ["actions/**/*.spec.ts", "node_modules"]
}
